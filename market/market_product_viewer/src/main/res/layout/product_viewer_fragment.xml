<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/navigate_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.alxabr.market_common.ProductImageViewer
                android:id="@+id/productImageViewer"
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <com.alxabr.market_common.ProductFavoriteView
                android:id="@+id/productFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/productImageViewer"
                tools:text="Это продукт" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/productTitle"
                tools:text="Это очень длинное описание данного продукта, ну прям очень длинное, что аж не влазиет контент, да да да текст екст етпавапвпвпвапвп"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/productSubtitle"
                tools:text="Доступно для заказа 30 штук"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/productAvailable"
                tools:text="4.5" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                android:layout_marginTop="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toStartOf="@+id/productPriceWithDiscount"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/productRating"
                tools:text="300 Р" />

            <com.alxabr.market_common.ObliqueStrikeTextView
                android:id="@+id/productPriceWithDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/productPrice"
                app:layout_constraintTop_toTopOf="@id/productPrice"
                app:layout_constraintBottom_toBottomOf="@id/productPrice"
                tools:text="500 Р" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productDiscount"
                style="@style/DiscountStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/productPriceWithDiscount"
                app:layout_constraintTop_toTopOf="@id/productPriceWithDiscount"
                app:layout_constraintBottom_toBottomOf="@id/productPriceWithDiscount"
                tools:text="500 Р"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/market_product_viewer_description"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/productPrice"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/productBrand"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableEnd="@drawable/arrow_rigth"
                android:gravity="start|center_vertical"
                app:layout_constraintTop_toBottomOf="@id/textDesc"
                tools:text="Adidas"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/productBrand"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productHideDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/market_product_viewer_hide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/productDescription"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textCharacters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/market_product_viewer_characteristics"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/productHideDescription"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/market_product_viewer_ingredients"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textCharacters"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/productIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/textIngredients"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToBasket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/market_product_viewer_to_basket"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>